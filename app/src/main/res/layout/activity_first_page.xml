<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/donate_blood"
    android:alpha="0.85"
    android:gravity="center"
    tools:context=".BloodDonationMap.FirstPageActivity">

    <Button
        android:text="Need Blood"
        android:alpha="0.9"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:elevation="10dp"
        android:layout_marginTop="38dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/blood_button"
        android:id="@+id/btn_need_blood"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_donor_profile"
        android:alpha="0.9"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_need_blood"
        android:layout_marginTop="70dp"
        android:background="@drawable/blood_button"
        android:elevation="10dp"
        android:padding="20dp"
        android:text="Be a Donor"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_info"
        android:alpha="0.9"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_donor_profile"
        android:layout_marginTop="70dp"
        android:background="@drawable/blood_button"
        android:elevation="10dp"
        android:padding="20dp"
        android:text="Informations"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</RelativeLayout>
