<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/donate_blood"
    android:gravity="center"
    tools:context=".BloodDonationMap.FirstPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/llb">

        <Button
            android:text="Need Blood"
            android:alpha="0.8"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:background="@drawable/blood_button"
            android:id="@+id/btn_need_blood" />

        <Button
            android:id="@+id/btn_donor_profile"
            android:alpha="0.8"
            android:layout_margin="10dp"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:background="@drawable/blood_button"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Be a Donor"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_info"
        android:alpha="0.8"
        android:layout_margin="10dp"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/llb"
        android:background="@drawable/blood_button"
        android:elevation="10dp"
        android:padding="10dp"
        android:text="Need to know"
        android:textColor="#ffffff"
        android:textSize="16dp" />
</RelativeLayout>
